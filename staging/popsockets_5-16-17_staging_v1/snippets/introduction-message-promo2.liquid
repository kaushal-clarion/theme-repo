<section class="introduction-message-wrap">
  <div class="introduction-message">

{% if settings.introduction-title-promo2 != blank or settings.introduction-tagline-promo2 != blank %}
  {% if settings.introduction-title-promo2 != blank %}
    <h2>{{ settings.introduction-title-promo2 }}</h2>
  {% endif %}
  {% if settings.introduction-tagline-promo2 != blank %}
    <h3>{{ settings.introduction-tagline-promo2 }}</h3>
  {% endif %}
{% else %}
  <h2>{{ 'onboarding.introduction_message.title' | t }}</h2>
  <h3>{{ 'onboarding.introduction_message.tagline' | t }}</h3>
{% endif %}

      </div>
    </section>